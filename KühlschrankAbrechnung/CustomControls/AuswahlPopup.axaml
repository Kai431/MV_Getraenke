<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KühlschrankAbrechnung.AuswahlPopup"
             Background="Transparent"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

  <Grid Background="Transparent"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">

    <Border CornerRadius="16" BorderBrush="DodgerBlue" BorderThickness="1"
            BoxShadow="0 0 50 10 DarkGray" Padding="20" Background="White" Width="300" Height="320">
      <StackPanel Spacing="12">
        <TextBlock FontSize="22" FontWeight="Bold"
                   Text="{Binding MusikerName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   HorizontalAlignment="Center" Background="White" Foreground="Black"/>
        <Image Width="100" Height="100" Stretch="Uniform"
               Source="{Binding Bild, RelativeSource={RelativeSource AncestorType=UserControl}}"
               HorizontalAlignment="Center"/>
        <TextBlock FontSize="20"
                   Text="{Binding Getränk, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   HorizontalAlignment="Center" Background="White" Foreground="Black"/>

        <Button Content="Stornieren"
                Background="Crimson"
                Foreground="White"
                Command="{Binding ExecuteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                HorizontalAlignment="Center"
                Width="150"
                Height="60"
                FontSize="20"
                CornerRadius="12"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"/>

        <ProgressBar x:Name="Progress"
                     Minimum="0"
                     Maximum="100"
                     Height="8"
                     Foreground="DodgerBlue"
                     Background="#E0E0E0"
                     CornerRadius="4"
                     Margin="0,10,0,0"/>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
