<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KühlschrankAbrechnung.AbrechnungsView"
             xmlns:vm="clr-namespace:KühlschrankAbrechnung.ViewModels"
             xmlns:views="clr-namespace:KühlschrankAbrechnung.Views"
             x:DataType="vm:AbrechnungsViewModel"
             Background="White">
  <Grid RowDefinitions="Auto,*">
    <!-- HEADER -->
    <Border Background="#2196F3" Padding="20,0" Height="60" BorderBrush="#1976D2" BorderThickness="0,0,0,2">
      <DockPanel VerticalAlignment="Center">
        <TextBlock Text="Abrechnung"
                   VerticalAlignment="Center"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="White"
                   DockPanel.Dock="Left"/>

        <Button Content="Zurück"
                FontSize="22"
                FontWeight="Bold"
                Foreground="White"
                Padding="10,4"
                BorderBrush="White"
                BorderThickness="1.5"
                CornerRadius="8"
                VerticalContentAlignment="Center"
                Background="Transparent"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Center"
                Command="{Binding GoBackCommand}"
                DockPanel.Dock="Right"/>
      </DockPanel>
    </Border>
    
  <ScrollViewer Grid.Row="1">
    <StackPanel Spacing="24" Margin="20" HorizontalAlignment="Center">

      <ItemsControl ItemsSource="{Binding Musicians}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border BorderBrush="#CCC"
                    Width="250"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="16"
                    Margin="0,12"
                    Background="#FAFAFA"
                    BoxShadow="0 2 4 #AAA">

              <StackPanel Spacing="10">
                <TextBlock Text="{Binding Name}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="Black"/>

                <TextBlock FontSize="14" Foreground="Black">
                  <Run Text="Offener Betrag: "/>
                  <Run Text="{Binding outBalance}" Foreground="Red"/>
                  <Run Text=" €"/>
                </TextBlock>

                <Button Content="Bezahlt"
                        Width="100"
                        HorizontalContentAlignment="Center"
                        Command="{Binding $parent[ItemsControl].DataContext.BezahlenCommand}"
                        CommandParameter="{Binding .}"
                        Background="#4CAF50"
                        Foreground="White"
                        Padding="10,6"
                        CornerRadius="6"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Left"/>
              </StackPanel>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>

    </StackPanel>
  </ScrollViewer>
  </Grid>
</UserControl>
