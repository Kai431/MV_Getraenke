<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KühlschrankAbrechnung.MusicianInfoView"
             xmlns:vm="clr-namespace:KühlschrankAbrechnung.ViewModels"
             xmlns:views="clr-namespace:KühlschrankAbrechnung.Views"
             x:DataType="vm:MusicianViewModel"
             Background="White">

  <StackPanel HorizontalAlignment="Center">
    <StackPanel Margin="0,20" HorizontalAlignment="Center" Orientation="Horizontal" Spacing="20">
      <!-- Offener Betrag -->
      <Border Background="#FFEEEE" Width="180" BorderBrush="Red" BorderThickness="2" CornerRadius="10" Padding="10">
        <StackPanel>
          <TextBlock Text="Offener Betrag" FontWeight="Bold" FontSize="16" Foreground="Red" HorizontalAlignment="Center"/>
          <TextBlock Text="{Binding ChosenMusician.outBalance}" FontSize="20" FontWeight="Bold" Foreground="Red" HorizontalAlignment="Center"/>
          <TextBlock Text="€" FontSize="14" HorizontalAlignment="Center" Foreground="Red"/>
        </StackPanel>
      </Border>

      <!-- Gesamtbetrag -->
      <Border Background="#EEF8FF" Width="180" BorderBrush="#2196F3" BorderThickness="2" CornerRadius="10" Padding="10">
        <StackPanel>
          <TextBlock Text="Gesamt Ausgaben" FontWeight="Bold" FontSize="16" Foreground="#2196F3" HorizontalAlignment="Center"/>
          <TextBlock Text="{Binding ChosenMusician.Balance}" FontSize="20" FontWeight="Bold" Foreground="#2196F3" HorizontalAlignment="Center"/>
          <TextBlock Text="€" FontSize="14" HorizontalAlignment="Center" Foreground="#2196F3"/>
        </StackPanel>
      </Border>
      
    </StackPanel>
    <DataGrid ItemsSource="{Binding DataGridItems}"
              IsReadOnly="True"
              HorizontalAlignment="Center"
              VerticalAlignment="Top"
              GridLinesVisibility="All"
              Foreground="Black"
              Focusable="False"
              BorderBrush="Black"
              BorderThickness="1,1,0,0"
              Margin="5">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Getränk" Binding="{Binding Name}" Width="Auto"/>
        <DataGridTextColumn Header="Anzahl" Binding="{Binding Count}" />
        <DataGridTextColumn Header="Ges. [L]" Binding="{Binding ContentSum, StringFormat={}{0:F2} L}" />
        <DataGridTextColumn Header="Ges. [€]" Binding="{Binding CostSum, StringFormat={}{0:F2} €}"/>
      </DataGrid.Columns>
    </DataGrid>
  </StackPanel>

</UserControl>
